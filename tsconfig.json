{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2017",             // Or "esnext"
    "module": "esnext",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
